<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPlatzi.Views.SampleViews.BorderSamplePage"
             Title="BorderSamplePage">
    <VerticalStackLayout>
        <Border Stroke="green" Background="whitesmoke"
                StrokeThickness="5" Padding="30,20">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="40,45,0,0" />
                <!--<Rectangle />-->
            </Border.StrokeShape>
            <Label Text="This is a border" TextColor="green"
                   FontSize="25" FontAttributes="Bold" HorizontalTextAlignment="Center" />
        </Border>
    </VerticalStackLayout>
</ContentPage>