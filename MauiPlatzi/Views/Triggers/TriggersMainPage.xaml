<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPlatzi.Views.Triggers.TriggersMainPage"
             Title="TriggersMainPage">
    <VerticalStackLayout>
        <Border Stroke="green" Background="whitesmoke"
                StrokeThickness="5" Padding="30,20">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="40,45,0,0" />
            </Border.StrokeShape>
            <Label Text="Triggers Test Page" TextColor="green"
                   FontSize="25" FontAttributes="Bold" HorizontalTextAlignment="Center" />
        </Border>
        <Button Text="Go to page 1" Command="{Binding MyCommand}" CommandParameter="Prop" HorizontalOptions="Center" Margin="0,0,0,10" />
        <Button Text="Go to page 2" Command="{Binding MyCommand}" CommandParameter="Data" HorizontalOptions="Center" Margin="0,0,0,10"/>
        <Button Text="Go to page 3" Command="{Binding MyCommand}" CommandParameter="Event" HorizontalOptions="Center" Margin="0,0,0,10"/>
        <Button Text="Go to page 4" Command="{Binding MyCommand}" CommandParameter="Multi" HorizontalOptions="Center"/>
    </VerticalStackLayout>

</ContentPage>